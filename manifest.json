{
  "manifest_version": 3,
  "name": "LinkFlow",
  "version": "1.0.0",
  "description": "Paste anything from Google Docs (text + links). Extracts real hyperlinks and opens them in multiple tabs.",
  "permissions": ["tabs", "clipboardRead"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
